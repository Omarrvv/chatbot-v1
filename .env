# Flask Configuration
FLASK_ENV=development
LOG_LEVEL=INFO
DEBUG=true
PORT=8000
FLASK_APP=run_chatbot.py

# Security
SECRET_KEY=your-secret-key-here
CSRF_ENABLED=false
JWT_SECRET=egypt-chatbot-jwt-secret-key-for-development

# API Keys
ANTHROPIC_API_KEY=sk-ant-api-key-placeholder
TRANSLATION_API_KEY=YOUR_KEY_HERE # Add API Key for your chosen translation provider
WEATHER_API_KEY=YOUR_KEY_HERE # Add API Key for weather service if needed

# Database
DATABASE_URI=sqlite:///./data/egypt_chatbot.db
VECTOR_DB_URI=./data/vector_db
ENABLE_ANALYTICS=true

# PostgreSQL (used for analytics)
POSTGRES_URI=postgres://postgres:postgres@localhost:5432/egypt_chatbot_analytics

# Session Storage
USE_REDIS=true
# SESSION_STORAGE_URI=file://./data/sessions # For file-based storage (deprecated)
SESSION_STORAGE_URI=redis://localhost:6379/1
# When running in Docker, use:
# SESSION_STORAGE_URI=redis://redis:6379/1

# Content Paths
CONTENT_PATH=./data
MODELS_CONFIG=./configs/models.json
FLOWS_CONFIG=./configs/dialog_flows.json
SERVICES_CONFIG=./configs/services.json
TEMPLATES_PATH=./configs/response_templates

# Performance
ENABLE_CACHING=true
CACHE_TTL=300  # 5 minutes in seconds

# Frontend
FRONTEND_URL=http://localhost:3000

# Other
ENABLE_LOGGING=true
ENABLE_TELEMETRY=false

# Flask Configuration
FLASK_APP=run_chatbot.py
JWT_SECRET=egypt-chatbot-jwt-secret-key-for-development

# External Services
TRANSLATION_API_KEY=YOUR_KEY_HERE # Add API Key for your chosen translation provider
WEATHER_API_KEY=YOUR_KEY_HERE # Add API Key for weather service if needed

# Database Configuration
# Primary Database (PostgreSQL)
POSTGRES_URI=postgresql://user1:password@localhost:5432/egypt_chatbot
# Fallback/Migration Database (SQLite)
DATABASE_URI=sqlite:///./data/egypt_chatbot.db
VECTOR_DB_URI=./data/vector_db

# Session Storage Configuration
# SESSION_STORAGE_URI=file://./data/sessions # For file-based storage (deprecated)
SESSION_STORAGE_URI=redis://localhost:6379/1
# For Docker environment
# SESSION_STORAGE_URI=redis://redis:6379/1

# Content and Config Paths
CONTENT_PATH=./data
MODELS_CONFIG=./configs/models.json
FLOWS_CONFIG=./configs/dialog_flows.json
SERVICES_CONFIG=./configs/services.json
TEMPLATES_PATH=./configs/response_templates

# --- Service Keys (Add others as needed) ---
WEATHER_API_KEY=""
ANTHROPIC_API_KEY=""
TRANSLATION_API_KEY="" # Placeholder for Translation Service

