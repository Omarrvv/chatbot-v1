# Environment Configuration (Consolidated for FastAPI)
LOG_LEVEL=INFO
DEBUG=true
PORT=8000

# Security
# SECRET_KEY=your-secret-key-here # Flask specific, removed
# CSRF_ENABLED=false # Flask specific, removed
JWT_SECRET=egypt-chatbot-jwt-secret-key-for-development # Keep for FastAPI Auth

# API Keys (Use consistent placeholders)
ANTHROPIC_API_KEY=sk-ant-api-key-placeholder # Placeholder
TRANSLATION_API_KEY=YOUR_TRANSLATION_KEY_HERE # Placeholder
WEATHER_API_KEY=YOUR_WEATHER_KEY_HERE # Placeholder

# Database (Prioritize SQLite as per Phase 1/2 plan)
DATABASE_URI=sqlite:///./data/egypt_chatbot.db # Primary DB for KB/Analytics
VECTOR_DB_URI=./data/vector_db # For RAG
ENABLE_ANALYTICS=true # Keep analytics enabled

# PostgreSQL (Keep commented out unless explicitly needed later)
# POSTGRES_URI=postgres://postgres:postgres@localhost:5432/egypt_chatbot_analytics
# POSTGRES_URI=postgresql://user1:password@localhost:5432/egypt_chatbot

# Session Storage (Target: Redis)
USE_REDIS=true # Keep flag if used by config logic
# SESSION_STORAGE_URI=file://./data/sessions # File-based deprecated
SESSION_STORAGE_URI=redis://redis:6379/1 # Use service name for Docker
# Use redis://redis:6379/1 for Docker

# Content & Config Paths
CONTENT_PATH=./data
MODELS_CONFIG=./configs/models.json
FLOWS_CONFIG=./configs/dialog_flows.json
SERVICES_CONFIG=./configs/services.json
TEMPLATES_PATH=./configs/response_templates

# Performance
ENABLE_CACHING=true
CACHE_TTL=300  # 5 minutes in seconds

# Frontend
FRONTEND_URL=http://localhost:3000

# Other
ENABLE_LOGGING=true
ENABLE_TELEMETRY=false # Keep telemetry disabled for now

