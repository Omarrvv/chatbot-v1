# Egypt Tourism Chatbot - Environment Variables
# ======================================
# Copy this file to ".env" and adjust values as needed

# Database Configuration
# ---------------------
DATABASE_URI=sqlite:///./data/egypt_chatbot.db # Primary DB for KB/Analytics
VECTOR_DB_URI=./data/vector_db # For RAG
CONTENT_PATH=./data

# Session Storage
# --------------
SESSION_STORAGE_URI=redis://redis:6379/1 # Use service name for Docker
REDIS_URL=redis://localhost:6379/0

# API Keys
# --------
ANTHROPIC_API_KEY=sk-ant-api-key-placeholder # Placeholder
WEATHER_API_KEY=YOUR_WEATHER_KEY_HERE # Placeholder
TRANSLATION_API_KEY=YOUR_TRANSLATION_KEY_HERE # Placeholder

# Feature Flags (for gradual activation)
# --------------------------------------
# Core architecture flags
USE_NEW_KB=true
USE_NEW_API=false
USE_POSTGRES=false

# Advanced features flags
USE_NEW_NLU=false
USE_NEW_DIALOG=false
USE_RAG=false
USE_REDIS=false
USE_SERVICE_HUB=false

# Security
# -------
JWT_SECRET=egypt-chatbot-jwt-secret-key-for-development # Keep for FastAPI Auth

# Logging
# -------
LOG_LEVEL=INFO

# Server Configuration
# -------------------
FLASK_ENV=development
FLASK_DEBUG=1
ENV=development
MONGODB_URI=mongodb://localhost:27017/egyptchatbot
POSTGRES_URI=postgresql://postgres:password@localhost:5432/egyptchatbot

# Other Configuration
# ------------------
ENABLE_ANALYTICS=true # Keep analytics enabled
ENABLE_CACHING=true
ENABLE_TELEMETRY=false # Keep telemetry disabled for now
CACHE_TTL=300  # 5 minutes in seconds
FRONTEND_URL=http://localhost:3000
DEBUG=true
ENABLE_LOGGING=true

# Paths
# -----
MODELS_CONFIG=./configs/models.json
FLOWS_CONFIG=./configs/dialog_flows.json
SERVICES_CONFIG=./configs/services.json
TEMPLATES_PATH=./configs/response_templates

# Huggingface API key for non-locally hosted LLM
HF_API_KEY=
HUGGINGFACE_REPOSITORY=

# OpenAI API Key
OPENAI_API_KEY=

# Feature flags
USE_MONGODB=false
USE_PROMETHEUS=true 