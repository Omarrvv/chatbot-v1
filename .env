# Egypt Tourism Chatbot Environment Variables
# CRITICAL: DO NOT INCLUDE SECRETS IN THIS FILE!

# Environment
ENV=development
DEBUG=true
API_HOST=localhost
API_PORT=5050
API_BASE_URL=/api
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5050
# STATIC_PATH=react-frontend/build
AUTH_TESTING_MODE=true

# LLM Settings
LLM_PROVIDER=anthropic
# ⚠️ ADD YOUR ANTHROPIC API KEY HERE ⚠️
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Claude model to use - you can change this to another model if needed
CLAUDE_MODEL=claude-3-7-sonnet-20250219

# Feature flags
USE_NEW_KB=true
USE_NEW_API=true
USE_POSTGRES=true

# Database settings
POSTGRES_URI=postgresql://user:password@localhost:5432/egypt_chatbot
USE_POSTGRES=true
USE_REDIS=true
USE_NEW_NLU=true
USE_NEW_DIALOG=true
USE_RAG=true
USE_SERVICE_HUB=true

# Database Configuration
USE_POSTGRES=true
POSTGRES_URI=postgresql://postgres:postgres@localhost:5432/egypt_chatbot
DATABASE_URI=postgresql://postgres:postgres@localhost:5432/egypt_chatbot

# Redis Configuration
USE_REDIS=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Allowed Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5050

# Session management
SESSION_TTL_SECONDS=86400
SESSION_STORAGE_URI=file:///./data/sessions
COOKIE_SECURE=false

# Security
SECRET_KEY=egypt-tourism-chatbot-secret-key
JWT_SECRET=egypt-tourism-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Database settings - Using PostgreSQL
VECTOR_DB_URI=./data/vector_db
CONTENT_PATH=./data

# API Keys (replace with actual keys if available)
WEATHER_API_KEY=
TRANSLATION_API_KEY=

# Logging
ENABLE_LOGGING=true

# Frontend
FRONTEND_URL=http://localhost:3000

# Paths (Relative to project root)
MODELS_CONFIG=./configs/models.json
FLOWS_CONFIG=./configs/dialog_flows.json
SERVICES_CONFIG=./configs/services.json
TEMPLATES_PATH=./configs/response_templates
